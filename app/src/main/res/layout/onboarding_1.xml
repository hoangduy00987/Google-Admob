<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".OnBoarding1Activity"
    android:background="#F0F1F8"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/onboarding1_image"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:text="Welcome to the world of\n languages"
            android:textSize="20sp"
            android:textColor="#111213"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="6dp"
            />
        <TextView
            android:id="@+id/btNext"
            android:layout_width="335dp"
            android:layout_height="18dp"
            android:text="Next"
            android:textColor="#3D4CFB"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="6dp"
            />
        <LinearLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <View
                android:id="@+id/view1"
                android:layout_width="30dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/progress_active_shape"
                />
            <View
                android:id="@+id/view2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/progress_inactive_dot"
                />
            <View
                android:id="@+id/view3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/progress_inactive_dot"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nativeAdContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:visibility="gone"/>


</LinearLayout>